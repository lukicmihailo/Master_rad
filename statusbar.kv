# File name: statusbar.kv
#:kivy 1.8.0
#:import statusbar statusbar
<StatusBar>:
    msg_text: _msg_label.text
    orientation: 'horizontal'
    canvas:
    	Color:
			rgba: 1, 1, 1, 1
    Label:
        text: 'Total Figures: ' + str(root.counter)
    Label:
        id: _msg_label
        text: "Kivy started"
