
#:kivy 1.8.0
#:import toolbar toolbar
<ToolBar>:
    orientation: 'horizontal'
    canvas:
    	Color:
			rgba: 1, 1, 1, 1
    padding: 2
    Button:
        text: 'Clear'
        on_press: root.clear(*args)
    Button:
		text: 'Remove'
		on_release: root.remove(*args)
    Button:
        text: 'Link'
        on_release: root.link(*args)
    ToggleButton:
        text: 'Group'
        on_state: root.group(*args)
    Button:
        text: 'Zoom in'
        on_press: root.zoomIn(*args)
    Button:
        text: 'Zoom out'
        on_press: root.zoomOut(*args)
    Button:
        text: 'Color'
        on_press: root.color(*args)
    ToggleButton:
        text: 'Gestures'
        on_state: root.gestures(*args)
