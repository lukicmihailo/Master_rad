#:import toolbox toolbox
<ToolButton>:
	size_hint: None,None
	size: 48,48
	group: 'tool'
	canvas:
		PushMatrix:
		Translate:
			xy: self.x, self.y
	canvas.after:
		PopMatrix:

<ToolBox@GridLayout>:
	cols:2
	padding: 2
	ToolEllipse:
		background_normal: 'images/ellipse.png'
		background_down: 'images/ellipseRed.png'
	ToolButton:
		background_normal: 'images/line.png'
		background_down: 'images/lineRed.png'
	ToolButton:
		background_normal: 'images/link.png'
		background_down: 'images/linkRed.png'
	ToolRectangle:
		background_normal: 'images/rectangle.png'
		background_down: 'images/rectangleRed.png'
	ToolButton:
		background_normal: 'images/romb.png'
		background_down: 'images/rombRed.png'
	ToolStickman:
		background_normal: 'images/background.png'
		canvas:
			Color:
				rgba: 1,1,1,1
		StickMan:
			pos_hint: {'center_x':.5, 'center_y':.5} 

				