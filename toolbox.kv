#:import toolbox toolbox
<ToolButton>:
	size_hint: None,None
	size: 48,48
	group: 'tool'
	canvas:
		PushMatrix:
		Translate:
			xy: self.x, self.y
	canvas.after:
		PopMatrix:

<ToolBox@GridLayout>:
	cols:1
	padding: 2
	ToolCircle:
		background_normal: 'images/background.png'
		canvas:
			Color:
				rgba: 0,0,0,1
			Line:
				circle:24,24,14
	ToolLine:
		background_normal: 'images/background.png'
		canvas:
			Color:
				rgba: 0,0,0,1
			Line:
				points: 10,10,38,38
	ToolButton:
		background_normal: 'images/link.png'
		background_down: 'images/linkRed.png'
	ToolRectangle:
		background_normal: 'images/background.png'
		canvas:
			Color:
				rgba: 0,0,0,1
			Line:
				rectangle: 5,5,38,38
	ToolButton:
		background_normal: 'images/romb.png'
		background_down: 'images/rombRed.png'
	ToolStickman:
		background_normal: 'images/background.png'
		canvas:
			Color:
				rgba: 1,1,1,1
		StickMan:
			pos_hint: {'center_x':.5, 'center_y':.5} 

				