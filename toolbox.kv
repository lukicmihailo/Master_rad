# File name: toolbox.kv
#:kivy 1.8.0
#:import toolbox toolbox
<ToolButton>:
    size_hint: None,None
    size: 48,48
    group: 'tool'
    canvas:
        PushMatrix:
        Translate:
            xy: self.x,self.y
    canvas.after:
        PopMatrix:

<ToolBox@GridLayout>:
    cols: 2
    padding: 2
    tool_circle: _tool_circle
    tool_ellipse: _tool_ellipse
    tool_line: _tool_line
    tool_stickman: _tool_stickman
    tool_move_canvas: _tool_move_canvas
    ToolMoveCanvas:
    	id: _tool_move_canvas
    	background_normal: 'images/crnaRuka.jpg'
		background_down: 'images/crvenaRuka.jpg'
    ToolCircle:
        id:  _tool_circle
        background_normal: 'images/crnKrug.png'
		background_down: 'images/crvenKrug.png'
    ToolEllipse:
        id:  _tool_ellipse
        background_normal: 'images/crnaElipsa.png'
		background_down: 'images/crvenaElipsa.png'
    ToolLine:
        id: _tool_line
        background_normal: 'images/crnaLinija.png'
		background_down: 'images/crvenaLinija.png'
    ToolStickman:
        id: _tool_stickman
        background_normal: 'images/glisaCrn.png'
		background_down: 'images/glisaCrven.png'
	ToolRectangle:
		id: _tool_rectangle
		background_normal: 'images/crniPravougaonik.png'
		background_down: 'images/kockaCrvena.png'
