#:kivy 1.8.0
#:import kivy kivy

<UMLPainterFrame>:
	canvas:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size:self.size	
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		ToolBox:
			id: _tool_box
			drawing_canvas: _drawing_canvas
			uml_painter_frame: root
			size_hint: None,None
			width:50
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'top'
		DrawingCanvas:
			id: _drawing_canvas
			status_bar: _status_bar
			tool_bar: _toolbar
			tool_box: _tool_box
			size_hint: None,None
			width: root.width - _tool_box.width
			height: root.height - _toolbar.height - _status_bar.height
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'vertical'
			Toolbar:
				id: _toolbar
				drawing_canvas: _drawing_canvas
				uml_painter_frame: root
				size_hint: 1,None
				height: 48
			StatusBar:
				id: _status_bar
				size_hint: 1,None
				height: 24
				
		